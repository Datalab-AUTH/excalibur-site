---
import { Icon } from "astro-icon/components";
---

<header
	class="w-full py-4 px-4 border-b border-white/20 bg-white/80 backdrop-blur-xl sticky top-0 z-50 shadow-sm"
	role="banner"
>
	<nav
		class="max-w-6xl mx-auto flex items-center justify-between"
		aria-label="Main navigation"
	>
		<a
			href="/"
			class="text-2xl font-bold hover:opacity-80 transition-opacity"
			style="color: var(--color-button)"
			aria-label="EXCALIBUR - Home"
		>
			EXCALIBUR
		</a>

		<!-- Mobile menu button -->
		<button
			type="button"
			class="md:hidden p-2 text-gray-600 hover:text-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 rounded-xl transition-colors"
			aria-label="Toggle menu"
			aria-expanded="false"
			aria-controls="mobile-menu"
			id="mobile-menu-button"
		>
			<Icon name="tabler:menu-2" class="w-6 h-6" aria-hidden="true" />
		</button>

		<!-- Desktop navigation -->
		<ul class="hidden md:flex items-center gap-8" role="list">
			<li>
				<a
					href="/"
					class="text-gray-600 hover:text-indigo-600 transition-colors font-medium"
					aria-current={Astro.url.pathname === "/" ? "page" : undefined}
				>
					Home
				</a>
			</li>
			<!-- About Dropdown -->
			<li>
				<a
					href="/about"
					class="text-gray-600 hover:text-indigo-600 transition-colors font-medium"
					aria-current={Astro.url.pathname === "/about" ? "page" : undefined}
				>
					About
				</a>
			</li>
			<!-- Research & Outputs Dropdown -->
			<li class="relative group">
				<button
					class="text-gray-600 hover:text-indigo-600 transition-colors flex items-center gap-1 font-medium"
					aria-expanded="false"
					aria-haspopup="true"
				>
					Research & Outputs
					<Icon
						name="tabler:chevron-down"
						class="w-4 h-4 transition-transform group-hover:rotate-180"
						aria-hidden="true"
					/>
				</button>
				<ul
					class="absolute left-0 top-full mt-2 w-56 bg-white/95 backdrop-blur-xl border border-gray-100 rounded-xl shadow-xl shadow-indigo-500/5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50 overflow-hidden"
				>
					<li>
						<a
							href="/research/publications"
							class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
						>
							Publications
						</a>
					</li>
					<li>
						<a
							href="/research/tools"
							class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
						>
							Software & Tools
						</a>
					</li>
					<li>
						<a
							href="/research/citizen-science"
							class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
						>
							Citizen Science / Case Studies
						</a>
					</li>
				</ul>
			</li>
			<li>
				<a
					href="/news"
					class="text-gray-600 hover:text-indigo-600 transition-colors font-medium"
					aria-current={Astro.url.pathname.startsWith("/news") ? "page" : undefined}
				>
					News
				</a>
			</li>
			<li>
				<a
					href="/contact"
					class="btn-primary px-5 py-2.5 rounded-xl font-medium"
					aria-current={Astro.url.pathname === "/contact" ? "page" : undefined}
				>
					Contact
				</a>
			</li>
		</ul>
	</nav>

	<!-- Mobile menu -->
	<div
		id="mobile-menu"
		class="hidden md:hidden border-t border-gray-100 bg-white/95 backdrop-blur-xl"
		role="menu"
		aria-labelledby="mobile-menu-button"
	>
		<ul class="flex flex-col py-4" role="list">
			<li>
				<a
					href="/"
					class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors font-medium"
					role="menuitem"
				>
					Home
				</a>
			</li>
			<!-- Mobile About Section -->
			<li class="border-t border-gray-100">
				<span
					class="block px-4 py-2 text-xs font-semibold text-indigo-400 uppercase tracking-wider"
					>About</span
				>
				<a
					href="/about/objectives"
					class="block px-6 py-2 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
					role="menuitem"
				>
					Objectives
				</a>
				<a
					href="/about"
					class="block px-6 py-2 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
					role="menuitem"
				>
					About the Project
				</a>
			</li>
			<!-- Mobile Research Section -->
			<li class="border-t border-gray-100">
				<span
					class="block px-4 py-2 text-xs font-semibold text-indigo-400 uppercase tracking-wider"
					>Research & Outputs</span
				>
				<a
					href="/research/publications"
					class="block px-6 py-2 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
					role="menuitem"
				>
					Publications
				</a>
				<a
					href="/research/tools"
					class="block px-6 py-2 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
					role="menuitem"
				>
					Software & Tools
				</a>
				<a
					href="/research/citizen-science"
					class="block px-6 py-2 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors"
					role="menuitem"
				>
					Citizen Science / Case Studies
				</a>
			</li>
			<li class="border-t border-gray-100">
				<a
					href="/news"
					class="block px-4 py-3 text-gray-600 hover:bg-indigo-50 hover:text-indigo-700 transition-colors font-medium"
					role="menuitem"
				>
					News
				</a>
			</li>
			<li class="border-t border-gray-100 px-4 pt-4">
				<a
					href="/contact"
					class="btn-primary block text-center px-4 py-3 rounded-xl font-medium"
					role="menuitem"
				>
					Contact
				</a>
			</li>
		</ul>
	</div>
</header>

<script>
	// Mobile menu toggle functionality
	const menuButton = document.getElementById("mobile-menu-button");
	const mobileMenu = document.getElementById("mobile-menu");

	if (menuButton && mobileMenu) {
		menuButton.addEventListener("click", () => {
			const isExpanded = menuButton.getAttribute("aria-expanded") === "true";
			menuButton.setAttribute("aria-expanded", String(!isExpanded));
			mobileMenu.classList.toggle("hidden");
		});

		// Close menu when clicking outside
		document.addEventListener("click", (e) => {
			if (
				!menuButton.contains(e.target as Node) &&
				!mobileMenu.contains(e.target as Node) &&
				!mobileMenu.classList.contains("hidden")
			) {
				menuButton.setAttribute("aria-expanded", "false");
				mobileMenu.classList.add("hidden");
			}
		});

		// Close menu on escape key
		document.addEventListener("keydown", (e) => {
			if (e.key === "Escape" && !mobileMenu.classList.contains("hidden")) {
				menuButton.setAttribute("aria-expanded", "false");
				mobileMenu.classList.add("hidden");
				menuButton.focus();
			}
		});
	}
</script>
