---
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section
	class="relative w-full px-4 py-24 md:py-40 text-center overflow-hidden"
	style="background-image: url('/images/banner-home.jpg'); background-size: cover; background-position: center bottom; background-attachment: fixed;"
	aria-labelledby="hero-heading"
>
	<!-- Semi-transparent overlay for readability -->
	<div class="absolute inset-0 bg-[#0b1a4a]/50 z-0"></div>

	<div class="relative z-10 max-w-6xl mx-auto">
		<ScrollReveal client:load>
		<h1 id="hero-heading" class="text-5xl md:text-7xl font-bold mb-6">
			<span class="text-white">EXCALIBUR</span>
		</h1>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.2}>
			<p
				class="text-xl md:text-2xl text-gray-100 mb-10 max-w-3xl mx-auto leading-relaxed"
			>
				<span class="font-semibold" style="color: #b0c0ee">EX</span>plainable and demo<span class="font-semibold" style="color: #a2b3e8">C</span>r<span class="font-semibold" style="color: #a2b3e8">A</span>tized pipe<span class="font-semibold" style="color: #a2b3e8">LI</span>nes for un<span class="font-semibold" style="color: #a2b3e8">B</span>iased, tr<span class="font-semibold" style="color: #a2b3e8">U</span>stworthy, and <span class="font-semibold" style="color: #a2b3e8">R</span>esponsible human-centric AI
			</p>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.4}>
		<div class="flex flex-col sm:flex-row gap-4 justify-center">
			<a
				href="/about"
				class="btn-primary inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl font-semibold text-lg"
			>
				<Icon name="tabler:info-circle" class="w-5 h-5" aria-hidden="true" />
				<span>About the Project</span>
			</a>
			<a
				href="/research/tools"
				class="btn-secondary inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl font-semibold text-lg"
			>
				<Icon name="tabler:code" class="w-5 h-5" aria-hidden="true" />
				<span>Software & Tools</span>
			</a>
		</div>
	</ScrollReveal>
	</div>
</section>
