---
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section
	class="relative max-w-6xl mx-auto px-4 py-24 md:py-40 text-center overflow-hidden"
	aria-labelledby="hero-heading"
>
	<!-- Decorative background elements -->
	<div class="absolute inset-0 -z-10 overflow-hidden">
		<div
			class="absolute top-20 left-1/4 w-72 h-72 bg-indigo-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse"
		>
		</div>
		<div
			class="absolute top-40 right-1/4 w-72 h-72 bg-cyan-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse"
			style="animation-delay: 1s;"
		>
		</div>
		<div
			class="absolute bottom-20 left-1/3 w-72 h-72 bg-violet-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-pulse"
			style="animation-delay: 2s;"
		>
		</div>
	</div>

	<ScrollReveal client:load>
		<h1 id="hero-heading" class="text-5xl md:text-7xl font-bold mb-6">
			<span class="gradient-text">EXCALIBUR</span>
		</h1>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.2}>
		<p
			class="text-xl md:text-2xl text-gray-600 mb-10 max-w-3xl mx-auto leading-relaxed"
		>
			Trustworthy and Responsible AI through <span
				class="text-indigo-600 font-semibold">LLM-powered</span
			> Explainability and Fairness Evaluation
		</p>
	</ScrollReveal>
	<ScrollReveal client:load delay={0.4}>
		<div class="flex flex-col sm:flex-row gap-4 justify-center">
			<a
				href="/about/project"
				class="btn-primary inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl font-semibold text-lg"
			>
				<Icon name="tabler:info-circle" class="w-5 h-5" aria-hidden="true" />
				<span>About the Project</span>
			</a>
			<a
				href="/research/tools"
				class="btn-secondary inline-flex items-center justify-center gap-2 px-8 py-4 rounded-xl font-semibold text-lg"
			>
				<Icon name="tabler:code" class="w-5 h-5" aria-hidden="true" />
				<span>Software & Tools</span>
			</a>
		</div>
	</ScrollReveal>
</section>
