---
import ScrollReveal from "./ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
---

<section id="cta" class="max-w-6xl mx-auto px-4 py-24">
	<ScrollReveal client:idle scale={true}>
		<div
			class="relative overflow-hidden rounded-3xl p-12 md:p-16 text-center"
			style="background-image: url('/images/banner5.webp'), var(--gradient-primary); background-size: cover, cover; background-position: center bottom, center; background-repeat: no-repeat, no-repeat;"
		>
			<!-- Decorative elements -->
			<div
				class="absolute inset-0 bg-[#0b1a4a]/70 z-10"
			>
			</div>
			<div
				class="absolute top-0 left-0 w-64 h-64 bg-white/5 rounded-full -translate-x-1/2 -translate-y-1/2 blur-2xl"
			>
			</div>
			<div
				class="absolute bottom-0 right-0 w-96 h-96 bg-cyan-500/10 rounded-full translate-x-1/3 translate-y-1/3 blur-3xl"
			>
			</div>

			<div class="relative z-20">
				<span
					class="inline-block px-4 py-1.5 bg-white/10 text-white/90 rounded-full text-sm font-semibold mb-6 tracking-wide border border-white/20"
					>JOIN US</span
				>
				<h2 class="text-4xl md:text-5xl font-bold mb-6 text-white">
					Get Involved
				</h2>
				<p
					class="text-xl text-indigo-200 mb-10 max-w-2xl mx-auto leading-relaxed"
				>
					EXCALIBUR follows a citizen-science-inspired approach. Stay connected
					for upcoming opportunities to participate in our in-the-wild case
					studies and help shape the future of trustworthy AI.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a
						href="/research/citizen-science"
						class="inline-flex items-center justify-center gap-2 px-8 py-4 font-semibold text-lg rounded-full"
						style="background-color: white; color: var(--color-button);"
					>
						<Icon name="tabler:users" class="w-5 h-5" aria-hidden="true" />
						Citizen Science
					</a>
					<a
						href="/contact"
						class="inline-flex items-center justify-center gap-2 px-8 py-4 font-semibold text-lg rounded-full"
						style="background-color: white; color: var(--color-button);"
					>
						<Icon name="tabler:mail" class="w-5 h-5" aria-hidden="true" />
						Contact Us
					</a>
				</div>
			</div>
		</div>
	</ScrollReveal>
</section>
