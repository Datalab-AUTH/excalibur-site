---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ScrollReveal from "../../components/ScrollReveal.tsx";
import { getCollection } from "astro:content";
import { SITE } from "../../config/site.mjs";

const posts = (await getCollection("news"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-GB", {
    year: "numeric",
    month: "short",
    day: "2-digit",
  });
---

<Layout
  title={`News | ${SITE.title}`}
  description="Project updates and announcements from EXCALIBUR."
  canonicalURL={`${SITE.url}/news`}
>
  <Header />
  <main id="main-content" role="main">
    <div class="panel panel--white relative overflow-hidden" style="background-image: url('/images/banner10.jpg'); background-size: cover; background-position: center bottom;">
      <!-- Semi-transparent overlay for readability -->
      <div class="absolute inset-0 bg-[#0b1a4a]/50 z-0"></div>
      <section class="relative z-10 max-w-4xl mx-auto px-4 py-20">
        <ScrollReveal client:idle>
          <h1 class="text-5xl font-bold text-white mb-4">News & Updates</h1>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.1}>
          <p class="text-xl text-gray-100 mb-12">
            Follow the latest milestones, publications, and progress from the EXCALIBUR team.
          </p>
        </ScrollReveal>
      </section>
    </div>
    <section class="max-w-5xl mx-auto px-4 py-16">

      {posts.length === 0 ? (
        <div class="rounded-2xl border border-slate-200 bg-white p-8 text-slate-600">
          No news items yet. Check back soon.
        </div>
      ) : (
        <div class="grid gap-6">
          {posts.map((post) => (
            <article
              class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
            >
              {post.data.image && (
                <a href={`/news/${post.slug}`} class="block">
                  <img
                    src={post.data.image}
                    alt={post.data.imageAlt ?? "News image"}
                    class="w-full h-48 object-cover rounded-xl"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-slate-500">
                <span>{formatDate(post.data.date)}</span>
                {post.data.tags && post.data.tags.length > 0 && (
                  <span class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="rounded-full bg-slate-100 px-3 py-1 text-xs uppercase tracking-wide">
                        {tag}
                      </span>
                    ))}
                  </span>
                )}
              </div>
              <h2 class="text-2xl font-semibold text-slate-900 mt-4">
                <a href={`/news/${post.slug}`} class="hover:text-indigo-600">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-slate-600 mt-3">{post.data.summary}</p>
              <div class="mt-5">
                <a
                  href={`/news/${post.slug}`}
                  class="text-indigo-600 font-medium hover:text-indigo-700"
                >
                  Read more
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </section>
  </main>
  <Footer />
</Layout>
