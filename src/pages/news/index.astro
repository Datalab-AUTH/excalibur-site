---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
import { SITE } from "../../config/site.mjs";

const posts = (await getCollection("news"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const formatDate = (date: Date) =>
  date.toLocaleDateString("en-GB", {
    year: "numeric",
    month: "short",
    day: "2-digit",
  });
---

<Layout
  title={`News | ${SITE.title}`}
  description="Project updates and announcements from EXCALIBUR."
  canonicalURL={`${SITE.url}/news`}
>
  <Header />
  <main id="main-content" role="main" class="py-16 px-4">
    <section class="max-w-5xl mx-auto">
      <div class="mb-10">
        <p class="text-sm uppercase tracking-[0.3em] text-indigo-500">News</p>
        <h1 class="text-3xl md:text-4xl font-semibold text-slate-900 mt-3">
          Project updates
        </h1>
        <p class="text-slate-600 mt-4 max-w-2xl">
          Follow milestones, publications, and platform progress from the EXCALIBUR
          team.
        </p>
      </div>

      {posts.length === 0 ? (
        <div class="rounded-2xl border border-slate-200 bg-white p-8 text-slate-600">
          No news items yet. Check back soon.
        </div>
      ) : (
        <div class="grid gap-6">
          {posts.map((post) => (
            <article
              class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm hover:shadow-md transition-shadow"
            >
              {post.data.image && (
                <a href={`/news/${post.slug}`} class="block">
                  <img
                    src={post.data.image}
                    alt={post.data.imageAlt ?? "News image"}
                    class="w-full h-48 object-cover rounded-xl"
                    loading="lazy"
                  />
                </a>
              )}
              <div class="mt-4 flex flex-wrap items-center gap-3 text-sm text-slate-500">
                <span>{formatDate(post.data.date)}</span>
                {post.data.tags && post.data.tags.length > 0 && (
                  <span class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="rounded-full bg-slate-100 px-3 py-1 text-xs uppercase tracking-wide">
                        {tag}
                      </span>
                    ))}
                  </span>
                )}
              </div>
              <h2 class="text-2xl font-semibold text-slate-900 mt-4">
                <a href={`/news/${post.slug}`} class="hover:text-indigo-600">
                  {post.data.title}
                </a>
              </h2>
              <p class="text-slate-600 mt-3">{post.data.summary}</p>
              <div class="mt-5">
                <a
                  href={`/news/${post.slug}`}
                  class="text-indigo-600 font-medium hover:text-indigo-700"
                >
                  Read more
                </a>
              </div>
            </article>
          ))}
        </div>
      )}
    </section>
  </main>
  <Footer />
</Layout>
