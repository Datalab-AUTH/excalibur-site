---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import ScrollReveal from "../../components/ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
import { SITE } from "../../config/site.mjs";
---

<Layout
  title={`Publications | ${SITE.title}`}
  description="Browse scientific publications, papers, and research outputs from the EXCALIBUR project."
  canonicalURL={`${SITE.url}/research/publications`}
>
  <Header />
  <main id="main-content" role="main">
    <div class="panel panel--white relative overflow-hidden" style="background-image: url('/images/banner6.webp'); background-size: cover; background-position: center bottom;">
      <!-- Semi-transparent overlay for readability -->
      <div class="absolute inset-0 bg-[#0b1a4a]/50 z-0"></div>
      <section class="relative z-10 max-w-4xl mx-auto px-4 py-20">
        <ScrollReveal client:idle>
          <h1 class="text-5xl font-bold text-white mb-4">Publications</h1>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.1}>
          <p class="text-xl text-gray-100 mb-12">
            Scientific papers, conference proceedings, and research outputs from the EXCALIBUR project.
          </p>
        </ScrollReveal>
      </section>
    </div>
    <div class="panel panel--sand">
      <section class="max-w-4xl mx-auto px-4 py-20">

      <ScrollReveal client:load delay={0.2}>
        <div class="bg-gray-50 border border-gray-200 rounded-lg p-8 text-center">
          <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mb-4 mx-auto">
            <Icon name="tabler:file-text" class="w-6 h-6 text-gray-900" aria-hidden="true" />
          </div>
          <h2 class="text-xl font-semibold text-gray-900 mb-2">Coming Soon</h2>
          <p class="text-gray-600 max-w-md mx-auto">
            Publications will be added as the project progresses. Check back for peer-reviewed papers, conference proceedings, and technical reports.
          </p>
        </div>
      </ScrollReveal>

      <!-- Placeholder for future publications -->
      <ScrollReveal client:load delay={0.3}>
        <div class="mt-12">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Expected Outputs</h2>
          <div class="space-y-4">
            <div class="flex items-start gap-3">
              <Icon name="tabler:circle-check" class="w-5 h-5 text-gray-400 mt-1" aria-hidden="true" />
              <span class="text-gray-600">Peer-reviewed journal articles</span>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="tabler:circle-check" class="w-5 h-5 text-gray-400 mt-1" aria-hidden="true" />
              <span class="text-gray-600">Conference papers and proceedings</span>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="tabler:circle-check" class="w-5 h-5 text-gray-400 mt-1" aria-hidden="true" />
              <span class="text-gray-600">Technical reports and deliverables</span>
            </div>
            <div class="flex items-start gap-3">
              <Icon name="tabler:circle-check" class="w-5 h-5 text-gray-400 mt-1" aria-hidden="true" />
              <span class="text-gray-600">Preprints and working papers</span>
            </div>
          </div>
        </div>
      </ScrollReveal>
      </section>
    </div>
  </main>
  <Footer />
</Layout>
