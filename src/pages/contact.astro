---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Contact | ${SITE.title}`}
  description="Get in touch with the EXCALIBUR project team. We welcome inquiries about collaboration, participation, and research."
  canonicalURL={`${SITE.url}/contact`}
>
  <Header />
  <main id="main-content" role="main">
    <div class="panel panel--white relative overflow-hidden" style="background-image: url('/images/banner9.webp'); background-size: cover; background-position: center bottom;">
      <!-- Semi-transparent overlay for readability -->
      <div class="absolute inset-0 bg-[#0b1a4a]/50 z-0"></div>
      <section class="relative z-10 max-w-4xl mx-auto px-4 py-20">
        <ScrollReveal client:idle>
          <h1 class="text-5xl font-bold text-white mb-4 text-center">Contact</h1>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.1}>
          <p class="text-xl text-gray-100 mb-12  text-center">
            Get in touch with the EXCALIBUR project team. We welcome inquiries about collaboration, participation in case studies, and research partnerships.
          </p>
        </ScrollReveal>
      </section>
    </div>
    <div class="panel panel--sand">
      <section class="max-w-2xl mx-auto px-4 py-20">

      <ScrollReveal client:idle delay={0.25}>
        <div class="flex gap-6 items-center mb-12">
          <a
            href="https://www.facebook.com/ELIDEKgr/"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 text-gray-600 hover:bg-[#0b1a4a] hover:text-white transition-colors group"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="ELIDEK on Facebook (opens in new tab)"
          >
            <Icon
              name="tabler:brand-facebook"
              class="w-5 h-5 group-hover:scale-110 transition-transform"
              aria-hidden="true"
            />
          </a>
          <a
            href="https://x.com/ELIDEK_HFRI"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 text-gray-600 hover:bg-[#0b1a4a] hover:text-white transition-colors group"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="ELIDEK on Twitter/X (opens in new tab)"
          >
            <Icon
              name="tabler:brand-twitter"
              class="w-5 h-5 group-hover:scale-110 transition-transform"
              aria-hidden="true"
            />
          </a>
          <a
            href="https://www.linkedin.com/company/hellenic-foundation-for-research-and-innovation/"
            class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 text-gray-600 hover:bg-[#0b1a4a] hover:text-white transition-colors group"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="ELIDEK on LinkedIn (opens in new tab)"
          >
            <Icon
              name="tabler:brand-linkedin"
              class="w-5 h-5 group-hover:scale-110 transition-transform"
              aria-hidden="true"
            />
          </a>
        </div>
      </ScrollReveal>
      
      <ScrollReveal client:idle delay={0.3}>
        <ContactForm />
      </ScrollReveal>
      </section>
    </div>
  </main>
  <Footer />
</Layout>

