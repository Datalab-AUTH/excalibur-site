---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Page Not Found | ${SITE.title}`}
  description="The page you are looking for could not be found."
  canonicalURL={`${SITE.url}/404`}
>
  <Header />
  <main id="main-content" role="main">
    <div class="panel panel--white relative overflow-hidden" style="background-image: url('/images/banner4.jpg'); background-size: cover; background-position: center bottom;">
      <div class="absolute inset-0 bg-[#0b1a4a]/50 z-0"></div>
      <section class="relative z-10 max-w-4xl mx-auto px-4 py-20">
        <ScrollReveal client:idle>
          <h1 class="text-5xl font-bold text-white mb-4 text-center">404</h1>
        </ScrollReveal>
        <ScrollReveal client:load delay={0.1}>
          <p class="text-xl text-gray-100 mb-12">
            The page you requested could not be found.
          </p>
        </ScrollReveal>
      </section>
    </div>

    <div class="panel panel--sand">
      <section class="max-w-4xl mx-auto px-4 py-20">
        <ScrollReveal client:load delay={0.2}>
          <div class="elegant-card p-10 text-center">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Page Not Found</h2>
            <p class="text-gray-600 leading-relaxed mb-8">
              The link may be outdated or the page may have been moved. 
            </p>
            <div class="flex flex-wrap items-center justify-center gap-4">
              <a href="/" class="btn-pill px-8 py-3 font-medium">Back to Home</a>

            </div>
          </div>
        </ScrollReveal>
      </section>
    </div>
  </main>
  <Footer />
</Layout>
