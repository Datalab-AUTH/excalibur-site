---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { Icon } from "astro-icon/components";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`About | ${SITE.title}`}
  description="Learn about the EXCALIBUR project - trustworthy and responsible AI through LLM-powered explainability and fairness evaluation."
  canonicalURL={`${SITE.url}/about`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-4xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="text-5xl font-bold text-gray-900 mb-4">About EXCALIBUR</h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.1}>
        <p class="text-xl text-gray-600 mb-12">
          Explore the different aspects of the EXCALIBUR project through our detailed pages.
        </p>
      </ScrollReveal>

      <div class="grid md:grid-cols-3 gap-6">
        <ScrollReveal client:load delay={0.2}>
          <a href="/about/project" class="block bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow h-full">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
              <Icon name="tabler:info-circle" class="w-6 h-6 text-gray-900" aria-hidden="true" />
            </div>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">Project</h2>
            <p class="text-gray-600">
              Learn about the EXCALIBUR project, its structure, core components, and key pillars.
            </p>
          </a>
        </ScrollReveal>

        <ScrollReveal client:load delay={0.3}>
          <a href="/about/objectives" class="block bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow h-full">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
              <Icon name="tabler:target" class="w-6 h-6 text-gray-900" aria-hidden="true" />
            </div>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">Objectives</h2>
            <p class="text-gray-600">
              Discover the strategic goals driving our mission for trustworthy AI.
            </p>
          </a>
        </ScrollReveal>

        <ScrollReveal client:load delay={0.4}>
          <a href="/about/methodology" class="block bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow h-full">
            <div class="w-12 h-12 bg-gray-100 rounded-lg flex items-center justify-center mb-4">
              <Icon name="tabler:route" class="w-6 h-6 text-gray-900" aria-hidden="true" />
            </div>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">Methodology</h2>
            <p class="text-gray-600">
              Explore our end-to-end approach for democratizing trustworthy AI.
            </p>
          </a>
        </ScrollReveal>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
